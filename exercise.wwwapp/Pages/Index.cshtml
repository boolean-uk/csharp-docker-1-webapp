@page
@model IndexModel
@using exercise.wwwapp.Data;
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
    <div class="row justify-content-center">



<div class="text-center">
    <h1 class="display-8">Boolean Products</h1>    
</div>
<h3>Products</h3>
<hr />
<table class="table table-striped" style="width:40%">
    <tr>

        <th>Id</th>
        <th>Product</th>
        <th></th>
                <th>Delete</th>
                <th></th>
                <th>+</th>
                <th>Stock</th>
                <th>-</th>
    </tr>

    @foreach (Product item in Model.Products)
    {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                   
                    <td></td>
                    <td>
                        <a href="/api/product/@item.Id" onclick="return confirm('Are you sure?')"><i class="bi bi-trash3"></i></a>
                    </td>
                    <td></td>
                    <td>
                        <a href="/api/product/increment/@item.Id"><i class="bi bi-arrow-up-short"></i></a>
                    </td>
                    <td>
                        <span>@ProductHelper.GetStockValueFromProductId(@item.Id)</span>
                    </td>
                    <td>
                        <a href="/api/product/decrement/@item.Id"><i class="bi bi-arrow-down-short"></i></a>
                    </td>

                    
                </tr>
    }
           
        </table>

    </div>
</div>